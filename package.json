  "devDependencies": {
    "@inkohx/eslint-config-codestyle": "^2.1.1",
    "@types/deepmerge": "^2.2.0",
    "@types/glob": "^7.1.1",
    "@types/node": "^13.11.0",
    "@types/ws": "^7.2.3",
    "@types/yargs-parser": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
